<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lecturer Rating Platform</title>
    <link rel="stylesheet" href="/css/styles.css" />

  </head>
  <body>
    <div class="container">
      <form action="/rate" method="POST">
        <h1>Lecturer Rating Platform</h1>
        <input
          type="text"
          id="firstName"
          name="firstName"
          placeholder="Lecturer First Name"
          required
        />
        <input
          type="text"
          id="lastName"
          name="lastName"
          placeholder="Lecturer Last Name"
          required
        />
        <input
          type="number"
          id="rating"
          name="rating"
          placeholder="Rating out of 10"
          required
        />
        <h4>Give comments...</h4>
        <textarea name="comment" required></textarea>
        <div class="btn-container">
          <input type="submit" value="Rate" id="button" />
          <a href="/reports" class="route-btn">View Reports</a>
        </div>
      </form>

    </div>
  </body>
</html>